# test/OMakefile

.PHONY: all clean check
OCAMLINCLUDES += ../src

FILES[] =
	main_test

OCAMLPACKS[] =
	oUnit
	core

PROGRAM = test
OCAML_LIBS += ../src/target

clean:
	rm -f *~ *.opt *.cmi *.cmx *.o *.omc *.cma *.cmxa

.DEFAULT: all

all: $(OCamlProgram $(PROGRAM), $(FILES))

check: all
	./$(PROGRAM)
